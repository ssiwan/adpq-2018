{
    "family": "%ECS_FAMILY%",
    "volumes": [
        {
            "name": "adpq-db",
            "host": { 
                "sourcePath": "/data/db"
            }
        }
    ],
    "containerDefinitions": [
        {
            "image": "%REPOSITORY_URI_SERVER%:v_%BUILD_NUMBER%",
            "name": "adpq-server",
            "cpu": 10,
            "memory": 256,
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 3001,
                    "hostPort": 3001
                }
            ]
        },
        {
            "image": "registry.hub.docker.com/library/mongo:3.6.2",
            "name": "adpq-db",
            "cpu": 10,
            "memory": 256,
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 27017,
                    "hostPort": 29716
                }
            ],
            "mountPoints": [
                {
                    "sourceVolume": "adpq-db",
                    "containerPath": "/data/db"
                }
            ]
        }
    ]
}